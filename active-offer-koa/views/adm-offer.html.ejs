<%- include('title', { title, extra : '<a href="/adm/offer/add" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-ad fa-sm text-white-50"></i> Ajouter une offre</a>' }); %>
<!-- Content Row -->
<div class="row card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="offerTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Lien</th>
                        <th>Date de fin</th>
                        <th>Mise en avant</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Titre</th>
                        <th>Lien</th>
                        <th>Date de fin</th>
                        <th>Mise en avant</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    <% offers.forEach(function (e) { %>
                    <tr>
                        <td><%- e.title %></td>
                        <td><%- e.link %></td>
                        <td><%- e.published %></td>
                        <td></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>